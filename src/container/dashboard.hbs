<html>

  <head>
    <title>
      Dashboard
    </title>
    <meta charset='utf-8' />
    <link
      rel='apple-touch-icon'
      sizes='180x180'
      href='/fav/apple-touch-icon.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='/fav/favicon-32x32.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='/fav/favicon-16x16.png'
    />
    <link rel='manifest' href='/fav/site.webmanifest' />
    <link
      rel='mask-icon'
      href='/fav/safari-pinned-tab.svg'
      color='#5bbad5'
    />
    <meta
      name='msapplication-TileColor'
      content='#da532c'
    />
    <meta name='theme-color' content='#ffffff' />
    <link href='css/normalize.css' rel='stylesheet' />
    <link href='css/dashboard.css' rel='stylesheet' />
    <meta
      name='viewport'
      content='viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no'
    />
  </head>

  <body>
    <div class='page page--dashboard'>
      <aside
        class='page__aside aside vertical vertical--big'
      >
        <div class='text aside__logo'>
          Sidebar
        </div>
        <nav class='vertical vertical--small'>
          <a
            href='#'
            class='nav-button nav-button--active click'
          >
            <span
              class='icon nav-button_icon'
              style='background-image: url(/svg/nav/home.svg)'
            ></span>
            <span class='text text--light'>Home</span>
          </a>
          <a href='#' class='nav-button click'>
            <span
              class='icon nav-button_icon'
              style='background-image: url(/svg/nav/table.svg)'
            ></span>
            <span class='text text--light'>Orders</span>
          </a>
          <a href='#' class='nav-button click'>
            <span
              class='icon nav-button_icon'
              style='background-image: url(/svg/nav/grid.svg)'
            ></span>
            <span class='text text--light'>Products</span>
          </a>
          <div class='field__block click'>
            <div class='field field--select'>
              <span
                class='text text--light'
              >Choose...</span>
            </div>
            <select class='field__select'>
              <option value='dog'>dog</option>
              <option value='cat'>cat</option>
              <option value='spider'>spider</option>
            </select>
          </div>
        </nav>
      </aside>
      <header class='header'>
        <div class='layout header_content text--small'>
          <div class='header__search'>
            <input
              type='text'
              placeholder='Search'
              class='text field field--header'
            />
            <span
              class='icon header__icon-search'
              style='background-image: url(/svg/header/search.svg)'
            ></span>
            <span
              class='icon icon--header-settings icon--button icon--color-blue click'
              style='background-image: url(/svg/header/settings.svg)'
            ></span>
          </div>
        </div>
      </header>
      <main class='main'>
        <div class='layout'>
          <section class='box analytic__block'>
            <div
              class='analytic analytic--double analytic--blue'
            >
              <span
                class='icon analytic__button icon--button icon--color-blue click'
                style='background-image: url(/svg/analytic/order.svg)'
              ></span>
              <div
                class='analytic__content vertical vertical--small'
              >
                <div
                  class='analytic__title text text--light'
                >
                  $961
                </div>
              </div>
            </div>

            <div
              class='analytic analytic--double'
            >analytic</div>
            <div class='analytic'>analytic</div>
            <div class='analytic'>analytic</div>
          </section>
        </div>
      </main>
    </div>
  </body>

</html>